<!DOCTYPE html>
<html>
   <head>
      <title>All Jobs</title>
      <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.js"></script>
      <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
      <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
      <link rel='stylesheet' href='/stylesheets/style.css' />
      <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
   </head>
   <body>
     <% include partials/JobsNav.ejs %>
      <div class="container">
         <div class="jumbotron">
            <h3>Following are all Applicants who applied to <%= job.JobName %> Job</h3>
         </div>
      <div class="panel panel-info panel-horizontal">
         <div class="panel-heading">
            <div class="content table-responsive table-full-width">
               <table class="table table-hover table-striped">
                  <thead>
                     <th>S.no</th>
                     <th>Condidate Name</th>
                     <th>Condidate Email</th>
                     <th>Condidate Status</th>
                     <th>Change Status</th>
               </thead>
               
            </div>
         </div>
      </div>
      <br>
            <% job.forEach(function(job){ %>
               <% job['Applicants'].forEach(function(Apply , index){ %>
                  <tbody class="panel panel-info panel-horizontal">
                     <tr class="panel-heading">
                        <td><%= index+1 %></a></td>
                        <td><%= Apply.Name %></a></td>
                        <td><%= Apply.Email %></td>
                        <td><%= Apply.Status %></td>
                        <td>
                        <form action="/company/<%= Company.Name %>/edit/<%= job.id %>/status" method="get">
                           <input type="submit" class="btn btn-info" value="Change Status">
                        </form>
                        </td>
                      </tr>
                     </tbody>
               <%}) %>
            <%}) %>
            <table>
   </body>
</html>