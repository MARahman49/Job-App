<!DOCTYPE html>
<html>
   <head>
      <title>Company Registration</title>
      <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.js"></script>
      <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
      <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
      <link rel='stylesheet' href='/stylesheets/style.css' />
      <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
   </head>
   <body>
      <% include partials/CompanyNav.ejs %>
      <div class="container" style="margin-top:30px">
         <div class="col-md-6 col-md-offset-3">
            <div class="panel panel-default">
               <div class="panel-heading">
                  <h3 class="panel-title"><strong class="text-info">Company Regestration </strong></h3>
               </div>
               <div class="panel-body">
                  <% errors.forEach(function(error){ %>
                  <div class="alert alert-danger alert-dismissible" role="alert"><%= error %>
                           <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                           <span aria-hidden="true">&times;</span>
                           </button>
                        </div>
                  <% }); %>
                  <% if(error_msg!=0){ %>
                        <div class="alert alert-danger alert-dismissible" role="alert"><%= error_msg %>
                           <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                           <span aria-hidden="true">&times;</span>
                           </button>
                        </div>
                  <%}%>
                   <% if(sucess_msg!=0){ %>
                        <div class="alert alert-success alert-dismissible" role="alert"><%= sucess_msg %>
                           <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                           <span aria-hidden="true">&times;</span>
                           </button>
                        </div>
                    <%}%>
                  <form name="NewCompany" method="post" action="/company/register" role="form">
                     <div class="form-group">
                        <input type="text" name="CompanyName" id="first_name" class="form-control" placeholder="Company Name" tabindex="1">
                     </div>
                     <div class="form-group">
                        <input type="email" name="Companyemail" id="email" class="form-control " placeholder="Company Contact Email" tabindex="4">
                     </div>
                     <div class="form-group">
                        <select class="form-control" name="CompanyLocation">
                           <option selected disabled>Company Location</option>
                           <option value="Lahore">Lahore</option>
                           <option value="Peshawar">Peshawar</option>
                           <option value="Islamabad">Islamabad</option>
                           <option value="Karachi">Karachi</option>
                           <option value="Quetta">Quetta</option>
                           <option value="Rawalpindi">Rawalpindi</option>
                        </select>
                     </div>
                     <div class="form-group">
                        <select class="form-control" name="CompanyType">
                           <option selected disabled>Company Type</option>
                           <option value="Information Technology">Information Technology</option>
                           <option value="Educationand Training">Education & Training</option>
                           <option value="Engineering">Engineering</option>
                           <option value="Medical and HealthCare">Medical & HealthCare</option>
                           <option value="Real State">Real State</option>
                           <option value="Manufacturing">Manufacturing</option>
                        </select>
                     </div>
                     <button type="submit" class="btn btn-success btn-block pull-right">Create Company</button>
                  </form>
               </div>
            </div>
         </div>
      </div>
   </body>
</html>