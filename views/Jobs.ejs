<!DOCTYPE html>
<html>
   <head>
      <title>Jobs List</title>
      <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.js"></script>
      <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
      <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
      <link rel='stylesheet' href='/stylesheets/style.css' />
      <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
   </head>
   <body>
      <% include partials/ApplyNav.ejs %>
      <div class="container">
         <br>
         <br>
         <% if(error_msg!=0){ %>
                        <div class="alert alert-danger alert-dismissible" role="alert"><%= error_msg %>
                           <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                           <span aria-hidden="true">&times;</span>
                           </button>
                        </div>
                  <%}%>
                   <% if(sucess_msg!=0){ %>
                        <div class="alert alert-success alert-dismissible" role="alert"><%= sucess_msg %>
                           <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                           <span aria-hidden="true">&times;</span>
                           </button>
                        </div>
                    <%}%>
                    <br>
                    <br>
               <div class="content table-responsive table-full-width">
                  <table class="table">
                     <thead class="panel panel-danger panel-horizontal">
                           <tr class="panel-heading">
                              <th>Job Name</th>
                              <th>Job Type</th>
                              <th>Job Location</th>
                              <th>Company</th>
                              <th>Job Salary</th>
                              <th>Apply</th>
                           </tr>
                        </thead>
                     </table>
                  </div>
                  <div class="content table-responsive table-full-width">
                  <table class="table">
                     <thead class="panel panel-info panel-horizontal">
                              <% Jobs.forEach(function(Job){ %>
                                 <tbody class="panel panel-info panel-horizontal">
                                    <tr class="panel-heading">
                                       <td><a href="/jobs/job/<%= Job.id %>"><%= Job.JobName %></a></td>
                                       <td><%= Job.JobType %></td>
                                       <td><%= Job.JobLocation %></td>
                                       <td><%= Job.PostedBy %></td>
                                       <td><%= Job.JobSalary %></td>
                                       <td>
                                        <a href="/jobs/<%= Job.id %>/apply" class="btn btn-info">Apply</a>
                                        </td>
                                     </tr>
                                 </tbody>
                              <%}) %>
                          
                     </thead>
                  </table>
                 </div>
              </div>
          </body>
</html>